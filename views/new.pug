html
    head
        title=title
        link(rel="stylesheet", href="/static/main.css")
    body(bgcolor="#ffffff")
        include ./header.pug
        br
        table(width="100%", bgcolor="#ffffff", border="0", cellspacing="0", cellpadding="0"): tbody
            td(width="20")
            td(valign="top")
                p(align="center"): b: font(size="5")=lang.newDiscussion
                table(width="100%", border="0", cellspacing="0", cellpadding="0"): tbody
                    tr(bgcolor=color)
                        td(height="10px")
                        td(height="10px", width="50px")
                        td(height="10px")
                        td(height="10px")
                        td(height="10px")
                    tr(bgcolor=color)
                        td(width="10px")
                        td(valign="top", width="50px"): img(width="50px", src=loginInfo.avatar || 'default.jpg')
                        td(width="10px")
                        td
                            form(action="/new", method="POST"): table(width="100%"): tbody
                                if errmsg
                                    tr
                                        td(width="40px", valign="top")
                                        td(style="color: red;")=errmsg
                                tr
                                    td(width="40px", valign="top")=lang.discussionTitle
                                    td: input(type="text", name="title", style="width: 100%", value=title || "")
                                tr
                                    td(width="40px", valign="top")=lang.discussionContent
                                    td: textarea(style="width: 100%; height: 100px;", name="content")=content || ""
                                tr
                                    td(width="40px", valign="top")=lang.tag
                                    td: div
                                        each tag in tags
                                            span.tagList
                                                input(type="checkbox", name="tag-" + tag.id)
                                                span=tag.name
                                tr
                                    td
                                    td: input(type="submit", value=lang.publish)
                        td(width="10px")
                    tr(bgcolor=color)
                        td(height="10px")
                        td(height="10px", width="50px")
                        td(height="10px")
                        td(height="10px")
                        td(height="10px")
            td(width="20")
        include ./footer.pug
